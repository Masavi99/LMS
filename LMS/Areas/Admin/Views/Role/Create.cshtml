@{
    Layout = "_Layout";
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create New Role</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data" id="role-form">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <h4 class="text-danger">@ViewBag.message</h4>
        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <div class="col-5">
                <input id="name" name="name" placeholder="Enter Role Name" value="@ViewBag.name" class="form-control" />
            </div>
            <br />
        </div>
        <div class="form-group mt-4 ms-5">
            <input type="submit" class="btn btn-primary" value="Save" />
            &nbsp;<a href="/Admin/Role/Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $("#role-form").validate({
                rules: {
                    name: {
                        required: true,
                    },
                },
                messages: {
                    name: "Enter Role Name!",
                }
            });
        });
    </script>
}
