@{
    ViewData["Title"] = "Role";
    Layout = "_Layout";
    var count = 1;
}
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Roles</h2>
    </div>
    <div class="col-6">
        <a href="/Admin/Role/Create" class="btn btn-info float-end"><i class="fas fa-plus"></i>&nbsp;New Role</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#SL</th>
            <th scope="col">Role Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Roles)
        {
            <tr>
                <td>@(count++)</td>
                <td>@item.Name</td>
                <td style="width:150px">
                    <div class="btn-group">
                        <a href="/Admin/Role/Edit/@item.Id" class="btn btn-primary"><i class="far fa-edit"></i></a>
                        <a href="/Admin/Role/Delete/@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {

    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    @if (TempData != null)
    {
        <script type="text/javascript">

            $(function () {
                var save = '@TempData["save"]'
                var update = '@TempData["update"]'
                var deletes = '@TempData["delete"]'
                if (save != '') {
                    alertify.success(save);
                }
                if (update != '') {
                    alertify.success(update);
                }
                if (deletes != '') {
                    alertify.success(deletes);
                }
            })
        </script>
    }
}